<div class="text-center mt-4 display-1">Articles</div>

<div class="container">
  <div class="row justify-content-md-center m-3">
    <div class="col-6 text-center">
      <%= link_to "Create new article", new_article_path, class: "btn btn-warning btn-outline-dark" %>
    </div>
  </div>  
</div>

<div class="container">
  <% @articles.each do |article| %>
    <div class="row justify-content-md-center mt-3">
      <div class="col-6">
        <div class="card text-center shadow mb-5 bg-white rounded">
          <div class="card-header">
            by nat-v
          </div>
          <div class="card-body">
            <h3 class="card-title"><%= link_to article.title, article_path(article), class: "text-info" %></h3>
            <p class="card-text"><%= truncate(article.description, length: 100) %></p>            
            <%= link_to "View", article_path(article), class: "btn btn-outline-info" %>
            <%= link_to "Edit", edit_article_path(article), class: "btn btn-outline-success" %>
            <%= link_to "Delete", article_path(article), class: "btn btn-outline-danger", data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>       
          </div>
          <div class="card-footer text-muted">
            <h6>Created: <%= article.created_at.strftime("%d.%m.%Y") %></h6>
            <h6>Last update: <%= article.updated_at.strftime("%d.%m.%Y") %></h6>
          </div>
        </div>
      </div>
    </div>
  <% end %>  
</div>
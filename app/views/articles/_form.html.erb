<div class="container mt-4"> 
  <div class="row justify-content-center">
    <div class="col-8">
      <%= render 'shared/errors', obj: @article %>
      <%= form_with(model: @article, class: "shadow p-3 mb-3 bg-secondary text-white rounded", local: true, data: { turbo: false }) do |f| %>  
        <div class="form-group row m-3">
          <%= f.label :title, for: "title", class: "col-2 col-form-label" %>
          <div class="col-10">
            <%= f.text_field :title, id: "title", class: "form-control shadow rounded", placeholder: "Article title" %>
          </div>
        </div>

        <div class="form-group row m-3">
          <%= f.label :description, for: "description", class: "col-2 col-form-label" %>
          <div class="col-10">
            <%= f.text_area :description, id: "description", class: "form-control shadow rounded", rows: 10, placeholder: "Description text of article" %>
          </div>
        </div>

        <div class="form-group row m-4 justify-content-center">
          <%= f.submit class: "btn btn-success btn-md col-3" %>  
        </div>  
      <% end %>    
    </div>
    <div class="col-12 text-center mb-4">
      <%= link_to "[ Return to articles page ]", articles_path, class: "text-dark" %>
    </div>
  </div>
</div>
<h1 class="text-center my-4 display-5"><%= @article.title %></h1>
<div class="container">
  <div class="row justify-content-md-center mt-3">    
    <div class="col-6">      
      <div class="card text-center shadow mb-5 bg-white rounded">
        <div class="card-header">
          by nat-v
        </div>
        <div class="card-body">          
          <div class="card-text"><%= simple_format(@article.description) %></div>   
          <%= link_to "Edit", edit_article_path(@article), class: "btn btn-outline-success" %>
          <%= link_to "Delete", article_path(@article), class: "btn btn-outline-danger", data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>       
        </div>
        <div class="card-footer text-muted">
          <h6>Created: <%= @article.created_at.strftime("%d.%m.%Y") %></h6>
          <h6>Last update: <%= @article.updated_at.strftime("%d.%m.%Y") %></h6>
        </div>
      </div>
    </div>
    <div class="col-12 text-center">
      <%= link_to "[ Return to articles page ]", articles_path, class: "text-dark" %>
    </div>
  </div>  
</div>
<div class="text-center mt-4 display-4">Alpha Bloggers</div>

<div class="flickr_pagination">  
  <%= will_paginate @users, :container => false %>
</div>

<div class="container">
  <% @users.each do |user| %>
    <div class="row justify-content-md-center mt-3">
      <div class="col-6">
        <div class="card text-center shadow mb-5 bg-white rounded">
          <div class="card-header">
            <%= link_to user.username, user_path(user) %>
          </div>
          <div class="card-body">
            <h3 class="card-title">
              <%= link_to gravatar_for(user, size: 150), user %>
            </h3>
            <p class="card-text"><%= pluralize(user.articles.count, "article") %></p>            
            <%= link_to "View", user, class: "btn btn-outline-info" %>
            <%= link_to "Edit profile", edit_user_path(user), class: "btn btn-outline-success" %>
          </div>
          <div class="card-footer text-muted">
            <h6>Joined: <%= user.created_at.strftime("%d.%m.%Y") %></h6>           
          </div>
        </div>
      </div>
    </div>
  <% end %>  
</div>

<div class="flickr_pagination mb-4">  
  <%= will_paginate @users, :container => false %>
</div>
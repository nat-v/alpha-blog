<div class="container mt-4"> 
  <div class="row justify-content-center">
    <div class="col-6">
      <%= render 'shared/errors', obj: @user %>
      <%= form_with(model: @user, class: "shadow p-3 mb-3 bg-secondary text-white rounded", local: true, data: { turbo: false }) do |f| %>  
        <div class="form-group row m-3">
          <%= f.label :username, for: "username", class: "col-2 col-form-label" %>
          <div class="col">
            <%= f.text_field :username, id: "username", class: "form-control shadow rounded", placeholder: "Enter username" %>
          </div>
        </div>

        <div class="form-group row m-3">
          <%= f.label :email, for: "email", class: "col-2 col-form-label" %>
          <div class="col">
            <%= f.email_field :email, id: "email", class: "form-control shadow rounded", placeholder: "Enter your email address" %>
          </div>
        </div>

        <div class="form-group row m-3">
          <%= f.label :password, for: "password", class: "col-2 col-form-label" %>
          <div class="col">
            <%= f.password_field :password, id: "password", class: "form-control shadow rounded", placeholder: "Enter password" %>
          </div>
        </div>

        <div class="form-group row m-4 justify-content-center">
          <%= f.submit(@user.new_record? ? "Sign Up" : "Update profile" , class: "btn btn-success btn-md col-3") %>  
        </div>  
      <% end %>    
    </div>
    <div class="col-12 text-center mb-4">
      <%= link_to "[ Already have an account? Log In here ]", login_path, class: "text-dark" %>
    </div>    
  </div>
</div>